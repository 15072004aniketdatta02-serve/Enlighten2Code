generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}
enum UserRole {
  ADMIN
  USER
}
enum Difficulty {
  EASY
  MEDIUM
  HARD
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  image     String?
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  problems  Problem[]
}

model Problem {
  id        String   @id @default(uuid())
  title     String
  description String
  difficulty  Difficulty
  tags      String[] //[tag1,tag2,tag3]
  userId    String
  examples  Json //{{input:[],output:[]}}
  constraints String
  hints     String?
  editorial String?
  testCases Json //{{input:[],output:[]}}
  codeSnippet Json //{{language:"",code:""}}
  referenceSolution Json //{{language:"",code:""}}
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
//relationships
user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

